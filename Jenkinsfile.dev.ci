pipeline {
    agent any
    tools {
        nodejs 'NodeJS'
    }

    environment {
        DOTNET_ROOT = '/usr/share/dotnet'
        GITHUB_TOKEN = credentials('git-token')
    }

    stages {
        stage('Checkout Backend') {
            steps {
                dir('backend') {
                    git branch: 'dev', url: 'https://github.com/nschiau/eventApp-backend.git'
                }
            }
        }

        stage('Checkout Frontend') {
            steps {
                dir('frontend') {
                    git branch: 'dev', url: 'https://github.com/nschiau/eventApp-frontend.git'
                }
            }
        }

        stage('Restore, Build and Test Backend') {
            steps {
                dir('backend') {
                    sh '''
                    dotnet restore src/EventHorizon.Api/EventHorizon.Api.csproj
                    dotnet build --no-restore src/EventHorizon.Api/EventHorizon.Api.csproj --configuration Release
                    dotnet test --verbosity normal tests/EventHorizon.Api.Tests/EventHorizon.Api.Tests.csproj
                    '''
                }
            }
        }

        stage('Install dependencies, Build and Test Frontend') {
            steps {
                dir('frontend') {
                    sh '''
                    npm install
                    npm run build
                    npm test
                    '''
                }
            }
        }

        stage('Promote to Staging (Auto Merge)') {
            when {
                branch 'main'
            }
            steps {
                script {
                    echo 'Checking for differences between main and staging...'

                    // Fetch latest remote branches
                    sh '''
                    git fetch origin main
                    git fetch origin staging
                    '''

                    // Check for differences
                    def diffCount = sh(script: 'git diff --name-only origin/staging..origin/main | wc -l', returnStdout: true).trim()

                    if (diffCount.toInteger() > 0) {
                        echo "Found ${diffCount} file(s) different â€” creating PR..."
                        sh '''
                        gh pr create --base staging --head main \
                        --title "Promote backend changes to staging" \
                        --body "Automated promotion triggered by latest main commit." || echo "PR already exists"
                        gh pr merge --merge --auto || echo "PR already merged or not mergeable"
                        '''
                    } else {
                        echo 'No changes detected between main and staging. Skipping PR creation.'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning workspace...'
            cleanWs()
        }
        success {
            echo 'Jenkins CI pipeline completed successfully.'
        }
        failure {
            echo 'Jenkins CI pipeline failed.'
        }
    }
}
