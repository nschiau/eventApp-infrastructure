pipeline {
    agent any
    tools {
        nodejs 'NodeJS'
    }

    environment {
        DOTNET_ROOT = '/usr/share/dotnet'
        GITHUB_TOKEN = credentials('git-token')
        REPO_BE = 'https://github.com/nschiau/eventApp-backend.git'
        REPO_FE = 'https://github.com/nschiau/eventApp-frontend.git'
    }

    stages {
        stage('Checkout Backend') {
            steps {
                dir('backend') {
                    git branch: 'dev', url: env.REPO_BE
                }
            }
        }

        stage('Checkout Frontend') {
            steps {
                dir('frontend') {
                    git branch: 'dev', url: env.REPO_FE
                }
            }
        }

        stage('Restore, Build and Test Backend') {
            steps {
                dir('backend') {
                    sh '''
                    dotnet restore src/EventHorizon.Api/EventHorizon.Api.csproj
                    dotnet build --no-restore src/EventHorizon.Api/EventHorizon.Api.csproj --configuration Release
                    dotnet test tests/EventHorizon.Api.Tests/EventHorizon.Api.Tests.csproj
                    '''
                }
            }
        }

        stage('Install dependencies, Build and Test Frontend') {
            steps {
                dir('frontend') {
                    sh '''
                    npm install
                    npm run build
                    npm test
                    '''
                }
            }
        }

        stage('Promote to Staging (Auto Merge)') {
            steps {
                script {
                    def repos = [env.REPO_BE, env.REPO_FE]

                    for (repoUrl in repos) {
                        def repoName = repoUrl.split('/').last().replace('.git', '')
                        def repo = "nschiau/${repoName}"

                        echo "Checking for differences between dev and staging in ${repo}..."

                        sh """
                        rm -rf tmp_repo
                        git clone --quiet ${repoUrl} tmp_repo
                        cd tmp_repo
                        git fetch origin dev
                        git fetch origin staging
                        """

                        def diffCount = sh(
                            script: 'cd tmp_repo && git diff --name-only origin/staging..origin/dev | wc -l',
                            returnStdout: true
                        ).trim()

                        if (diffCount.toInteger() > 0) {
                            echo "Found ${diffCount} file(s) different — creating PR dev → staging in ${repo}..."
                            sh """
                            cd tmp_repo
                            gh pr create --base staging --head dev \
                                --title "Promote dev → staging" \
                                --body "Automated promotion triggered by latest dev commit." \
                                --repo ${repo} || echo 'PR already exists'
                            gh pr merge dev --merge --auto --repo ${repo} || echo 'PR already merged or not mergeable'
                            """
                        } else {
                            echo "No unpromoted changes in ${repo}. Skipping PR creation."
                        }

                        sh 'rm -rf tmp_repo'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning workspace...'
            cleanWs()
        }
        success {
            echo 'Jenkins CI pipeline completed successfully.'
        }
        failure {
            echo 'Jenkins CI pipeline failed.'
        }
    }
}
